            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"productId\": \"{{productId}}\",\n      \"quantity\": 2,\n      \"variantLabel\": \"1kg\"\n    }\n  ],\n  \"address\": {\n    \"street\": \"123 Main St\",\n    \"city\": \"Mumbai\",\n    \"state\": \"Maharashtra\",\n    \"zipCode\": \"400001\"\n  },\n  \"paymentMethod\": \"cod\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/orders/create",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "orders", "create"]
            }
          }
        },
        {
          "name": "Get User Orders",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{"key": "token", "value": "{{jwt_token}}"}]
            },
            "method": "GET",
            "header": [],
